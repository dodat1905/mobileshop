<% provide :title, @product.name %>
<section id="main">
  <div class="container">
    <div class="row">
      <%= render "brands/brand", brands: @brands %>
      <div class="col-sm-9 padding-right">
        <div class="features_items">
          <h2 class="title text-center"><%= t "products" %></h2>
        </div>
        <div class="product-details">
          <div class="col-sm-5">
            <div class="view-product">
              <%= image_tag "product1.jpg" %>
            </div>
          </div>
          <div class="col-sm-7">
            <div class="product-information">
              <span><span><%= @product.name %></span></span>
              <h2><%= t "price" %><%= number_to_currency @product.price %></h2>
              <p>
                <b><%= t "availability" %>: </b>
                <%= @product.available? ? t("stock") : t("out_of_stock") %>
              </p>
              <p>
                <b><%= t "brand" %>:</b>
                <%= link_to @product.brand.name %>
              </p>
              <p>
                <b><%= t "description" %>:</b>
                <%= sanitize @product.description.html_safe %>
              </p><br />
              <%= link_to t("add_to_cart"),
                line_items_path(product_id: @product), method: :post,
                class: "add-to-cart add-to-cart-button" %>
            </div>
          </div>
        </div>
        <%= render partial: "comments/comment",
        locals: {comments: @support_comment.comments,
        product: @support_comment.product} %>
        <%= will_paginate @support_comment.comments %>
        <%= render "comments/new_comment", product: @product,
        create_comment: @support_comment.create_comment %>
      </div>
    </div>
  </div>
</section>
