<% provide :title, @product.name %>
<section id="main">
  <div class="container">
    <div class="row">
  	  <div class="col-sm-3">
        <%= link_to brands_url,
          class: "list-group-item active main-color-bg" do %>
          <span class="glyphicon glyphicon-cog" aria-hidden="true">
          </span> Brand<span class="badge">12</span>
        <% end %>
        <div class="list-group">
          <% @brands.each do |brand| %>
            <%= link_to brand_path(brand), class: "list-group-item" do %>
              <span class="glyphicon glyphicon-list-alt" aria-hidden="true">
              </span> <%= brand.name %><span class="badge">12</span>
            <% end %>
          <% end %>
        </div>
     </div>
    <div class="col-md-9">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Brands</h3>
        </div>
      <div class="panel-body">
        <div class="preview col-md-6">
          <div class="preview-pic tab-content">
            <div class="tab-pane active" id="pic-1"><img
              src="http://placekitten.com/200/126" /></div>
          </div>
	    </div>
        <div class="details col-md-6">
          <h3 class="product-title">Dien thoai
          	<%= link_to @product.name, product_path(@product) %></h3>
            <h2 class="product-title">Tinh trang: <% if @product.available? %>
              Con Hang
            <% else %>
              Het hang
            <% end %></h2>
          <p class="product-description"><%= sanitize @product.description.html_safe %></p>
	      <h4 class="price">current price: <span><%= @product.price %></span></h4>
	      <h4 class="price">Hang: <%= link_to @product.brand.name %></h4>
	      <p class="vote"><strong>91%</strong> of buyers enjoyed this product! <strong>(87 votes)</strong></p>
          <div class="action">
	        <button class="add-to-cart btn btn-default"
	          type="button">add to cart</button>
	        <button class="like btn btn-default"
	          type="button"><span class="fa fa-heart"></span></button>
	        </div>
	      </div>
	    </div>
      </div>
    </div>
  </div>
</div>
</section>
