<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 col-md-push-6 col-sm-push-6">
  <div class="panel panel-info">
    <div class="panel-heading">
      <%= t :review_order %>
      <div class="pull-right">
        <small>
          <% if session[:cart_id] %>
            <%= link_to t("edit"), cart_path(session[:cart_id]) %>
          <% end %>
        </small>
      </div>
    </div>
    <div class="panel-body">
      <% cart.line_items.each do |item| %>
        <div class="form-group"><hr /></div>
          <div class="form-group">
            <div class="col-sm-3 col-xs-3">
                <img class="img-responsive"
                  src="//c1.staticflickr.com/1/466/19681864394_c332ae87df_t.jpg">
            </div>
          <div class="col-sm-6 col-xs-6">
            <div class="col-xs-12"><%= item.product.name %></div>
              <div class="col-xs-12">
                <small>
                  <%= t "quantity" %>
                  <span><%= item.quantity %></span>
                </small>
              </div>
          </div>
            <div class="col-sm-3 col-xs-3 text-right">
              <h6><%= number_to_currency item.total_price %></h6>
            </div>
          </div>
      <% end %>
    <div class="form-group"><hr /></div>
      <div class="form-group">
        <div class="col-xs-12">
          <strong><%= t "order_total" %></strong>
            <div class="pull-right">
              <span><%= number_to_currency cart.total_price %></span>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
