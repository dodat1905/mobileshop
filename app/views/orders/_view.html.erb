<div class="container">
  <div class="row">
    <div class="col-md-9">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title"><%= t "product" %></h3>
        </div>
        <div class="panel-body">
          <table class="table table-striped table-hover">
            <tr>
              <th><%= t "name_order" %></th>
              <th><%= t "email" %></th>
              <th><%= t "address" %></th>
              <th><%= t "phone" %></th>
            </tr>
            <tr>
              <td><%= line_item.order.name %></td>
              <td><%= line_item.order.email %></td>
              <td><%= line_item.order.address %></td>
              <td><%= line_item.order.phone %></td>
            </tr>
            <tr>
              <th><%= t "product" %></th>
              <th><%= t "quantity" %></th>
              <th><%= t "price" %></th>
              <th><%= t "total_price" %></th>
              <th><%= t "time_buy" %></th>
            </tr>
            <% line_items.each do |line_item| %>
              <tr>
                <td><%= link_to line_item.product.name, line_item %></td>
                <td><%= line_item.quantity %></td>
                <td><%= line_item.price %></td>
                <td><%= line_item.total_price %></td>
                <td><%= l line_item.created_at %></td>
              </tr>
            <% end %>
            <h3>
              <%= t "total_price"%>:
              <%= line_items.inject(0) {|sum,f| sum + f.total_price } %> |
              <%= t "status" %>: <%= line_item.order.order_status %>
              <% if order.processing? %>
                <%= link_to t("cancel"), order_path, method: :patch %>
              <% end %>
            </h3>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
