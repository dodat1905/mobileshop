<% provide :title, t("order") %>
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">Product</h3>
          </div>
          <div class="panel-body">
            <table class="table table-striped table-hover">
              <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price Product</th>
                <th>Total Price</th>
                <th>Created at</th>
              </tr>
              <% @line_items.each do |line_item| %>
                <tr>
                  <td><%= link_to line_item.product.name, product_url(line_item) %></td>
                  <td><%= line_item.quantity %></td>
                  <td><%= line_item.price %></td>
                  <td><%= line_item.total_price %></td>
                  <td><%= line_item.created_at %></td>
                </tr>
              <% end %>
              <h3><%= t "total_price"%>:
              <%= @line_items.inject(0) {|sum,f| sum + f.total_price } %>
                | <%= t "status" %>: <%= @line_item.order.order_status %></h3>
             </table>
          </div>
        </div>
      </div>
    </div>
  </div>
