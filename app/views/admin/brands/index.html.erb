<% provide :title, Brand %>
<%= render "admin/sidebar" %>
      <div class="col-md-9">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title"><%= t "brand" %></h3>
          </div>
          <div class="panel-body">
            <div class="panel-footer"><%= link_to t("add_new_brand"),
              new_admin_brand_url %></div>
            <table class="table table-striped table-hover">
              <tr>
                <th>Name</th>
                <th>Option</th>
              </tr>
              <% @brands.each do |brand| %>
                <tr>
                  <td><%= link_to brand.name, admin_brand_path(brand) %></td>
                  <td><%= link_to "Edit", edit_admin_brand_path(brand) %>
                     | <%= link_to "Delete", admin_brand_path(brand), method: :delete,
                    data: {confirm: t("are_you_sure")} %></td>
              <% end %>
              </tr>
            </table>
            <div class="panel-footer"><%= will_paginate @brands %></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
