<% provide :title, Product %>
<%= render "sidebar" %>
<div class="col-md-9">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Product</h3>
    </div>
    <div class="panel-body">
      <table class="table table-striped table-hover">
        <tr>
          <th>Name</th>
          <th>Brand</th>
          <th>Price</th>
          <th>Coupon</th>
          <th>Option</th>
        </tr>
        <% @products.each do |product| %>
          <tr>
            <td><%= link_to product.name, product_path(product) %></td>
            <td><%= link_to product.brand.name,
              brand_path(product.brand) %></td>
            <td><%= product.price %></td>
            <td><%= product.coupon %></td>
            <td><%= link_to "Edit", edit_product_path(product) %> | <%= link_to "Delete",
                product, method: :delete,
              data: {confirm: t("are_you_sure")} %></td>
        <% end %>
          </tr>
       </table>
    </div>
  <% will_paginate @products %>
  </div>
</div>
