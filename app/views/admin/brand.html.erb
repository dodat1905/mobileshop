  <% provide :title, Brand %>
<header id="header">
  <div class="container">
    <div class="row">
      <div class="col-md-10">
        <h1><span class="glyphicon glyphicon-cog" aria-hidden="true">
          </span> Dashboard <small>Manage Your Site</small></h1>
      </div>
      <div class="col-md-2">
        <div class="dropdown">
          <button class="btn btn-primary dropdown-toggle"
            type="button" data-toggle="dropdown">Create Content
          <span class="caret"></span></button>
          <ul class="dropdown-menu">
            <li><%= link_to "Add new product", admin_products_new_url %></li>
            <li><%= link_to "Add new brand", admin_brands_new_url %></li>
          </ul>
        </div>
        </div>
      </div>
  </div>
</header>

<section id="main">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <div class="list-group">
          <%= link_to admin_index_url, class: "list-group-item active main-color-bg" do %>
            <span class="glyphicon glyphicon-cog" aria-hidden="true">
              </span> Dashboard<span class="badge">12</span>
          <% end %>
          <%= link_to admin_brands_url, class: "list-group-item" do %>
            <span class="glyphicon glyphicon-list-alt" aria-hidden="true">
              </span> Brand <span class="badge">12</span>
          <% end %>
          <%= link_to admin_products_url, class: "list-group-item" do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true">
              </span> Product <span class="badge">12</span>
          <% end %>
          <%= link_to admin_users_url, class: "list-group-item" do %>
            <span class="glyphicon glyphicon-user" aria-hidden="true">
              </span> User<span class="badge">12</span>
          <% end %>
          <%= link_to "", class: "list-group-item" do %>
            <span class="glyphicon glyphicon-user" aria-hidden="true">
              </span> Coupon<span class="badge">12</span>
          <% end %>
        </div>
      </div>
      <div class="col-md-9">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">Brands</h3>
          </div>
          <div class="panel-body">
            <table class="table table-striped table-hover">
              <tr>
                <th>Name</th>
                <th>Option</th>
              </tr>
              <% @brands.each do |brand| %>
                <tr>
                  <td><%= link_to brand.name, brand_path(brand) %></td>
                  <td><%= link_to "Edit", edit_brand_path(brand) %> |<%= link_to "Delete",
                    brand, method: :delete,
                    data: {confirm: t("are_you_sure")} %></td>
              <% end %>
              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
