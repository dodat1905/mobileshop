<% provide :title, Product %>
<%= render "admin/sidebar" %>
<div class="col-md-9">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Product</h3>
    </div>
    <div class="panel-body">
      <table class="table table-striped table-hover">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Adress</th>
          <th>Option</th>
        </tr>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.name, user_path(user) %></td>
            <td><%= user.email %></td>
            <td><%= user.phone %></td>
            <td><%= user.address %></td>
            <td><%= link_to "Edit", "" %>
               | <%= link_to "Delete", user,
               method: :delete, data: {confirm: t("are_you_sure")} %></td>
        <% end %>
          </tr>
          <tr><th><%= will_paginate @users %></th></tr>
       </table>
    </div>
  </div>
</div>
