<% provide :title, t("order") %>
<div class="col-md-9">
  <div class="panel panel-primary">
    <div class="add-to-cart-button">
      <%= t "order" %>
    </div>
    <div class="panel-body">
      <table class="table table-striped table-hover">
        <tr>
          <th><%= t "name_order" %></th>
          <th><%= t "email" %></th>
          <th><%= t "address" %></th>
          <th><%= t "phone" %></th>
          <th></th>
        </tr>
        <tr>
          <td><%= @order.name %></td>
          <td><%= @order.email %></td>
          <td><%= @order.address %></td>
          <td><%= @order.phone %></td>
          <td></td>
        </tr>
        <tr>
          <th><%= t "product" %></th>
          <th><%= t "quantity" %></th>
          <th><%= t "price" %></th>
          <th><%= t "total_price" %></th>
          <th><%= t "time_buy" %></th>
        </tr>
        <% @support_coupon.line_items.each do |line_item| %>
          <tr>
            <td>
              <%= link_to line_item.product.name,
                product_path(line_item.product) %>
            </td>
            <td><%= line_item.quantity %></td>
            <td><%= number_to_currency line_item.price %></td>
            <td>
              <% if @order.coupon_code %>
                <%= number_to_currency line_item.
                  sale_price(@support_coupon.find_coupon) %>
              <% else %>
                <%= number_to_currency line_item.total_price %>
              <% end %>
            </td>
            <td><%= l line_item.created_at %></td>
          </tr>
        <% end %>
        <center>
          <h4>
            <%= t "total_price"%>:
            <% if @order.coupon_code %>
              <b><%= number_to_currency @support_coupon.show_sale_price %></b> |
              <%= t "coupon" %>: <b><%= @order.coupon_code %></b> -
              <b><%= @support_coupon.coupon.percent %>%</b> |
            <% else %>
              <b><%= number_to_currency @support_coupon.show_total_price %></b> |
            <% end %>
            <%= t "status" %>: <%= t "#{@order.order_status}" %> |
            <%= link_to t("edit"), edit_admin_order_path(@order) %> |
          </h4>
        </center>
      </table>
    </div>
  </div>
</div>
