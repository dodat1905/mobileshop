<% provide :title, t("order") %>
<%= render "admin/sidebar" %>
<div class="col-md-9">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title"><%= t "order" %></h3>
    </div>
    <div class="panel-body">
      <table class="table table-striped table-hover">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Address</th>
          <th><%= t "phone" %></th>
        </tr>
          <tr>
            <td><%= @line_item.order.name %></td>
            <td><%= @line_item.order.email %></td>
            <td><%= @line_item.order.address %></td>
            <td><%= @line_item.order.phone %></td>
          <tr><tr></tr>
        <tr>
          <th>Product</th>
          <th>Quantity</th>
          <th>Price</th>
          <th><%= t "total_price" %></th>
        </tr>
          <% @line_items.each do |line_item| %>
            <td><%= link_to line_item.product.name,
              product_path(line_item) %></td>
            <td><%= line_item.quantity %></td>
            <td><%= line_item.price %></td>
            <td><%= line_item.total_price %></td>
          </tr>
          <% end %>
        <h3><%= t "total_price"%>:
        <%= @line_items.inject(0) {|sum,f| sum + f.total_price } %>
          | <%= t "status" %>: <%= @line_item.order.order_status %></h3>
       </table>
    </div>
  </div>
</div>
