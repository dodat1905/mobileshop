<% provide :title, Product %>
<%= render "admin/sidebar" %>
<div class="col-md-9">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Product</h3>
    </div>
    <div class="panel-body">
      <table class="table table-striped table-hover">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Address</th>
          <th>Order status</th>
          <th>Option</th>
        </tr>
        <% @orders.each do |order| %>
          <tr>
            <% if order.user_id.present? %>
              <td><%= order.user.name %></td>
            <% else %>
              <td><%= t "Quest" %></td>
            <% end %>
            <td><%= order.email %></td>
            <td><%= order.address %></td>
            <td><%= order.order_status %></td>
            <td><%= link_to "Detail", admin_order_path(order) %> | <%= link_to "Edit", edit_admin_order_path(order)  %> | <%= link_to "Delete",
                admin_order_path(order), method: :delete,
              data: {confirm: t("are_you_sure")} %></td>
        <% end %>
          </tr>
       </table>
    </div>
  <% will_paginate @orders %>
  </div>
</div>
