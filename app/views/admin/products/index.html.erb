<% provide :title, t("product") %>
<%= render "admin/static_pages/header" %>
<section id="main">
  <div class="container">
    <div class="row">
      <%= render "admin/static_pages/sidebar" %>
      <div class="col-md-9">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title"><%= t "product" %></h3>
          </div>
          <div class="panel-body">
            <div class="panel-footer">
              <%= link_to t("add_new_product"), new_admin_product_path %>
            </div>
            <%= render "index", products: @products %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
