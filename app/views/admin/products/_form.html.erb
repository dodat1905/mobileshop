<%= form_for [:admin, product] do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label t :name_product %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label t :available %>
  <%= f.check_box :available %>

  <%= f.label t :price %>
  <%= f.number_field :price, class: "form-control" %>

  <%= f.label t :description %>
  <%= f.cktext_area :description, placeholder: t("compose_new_micropost") %>

  <%= f.label t :coupon %>
  <%= f.text_field :coupon, class: "form-control" %>

  <%= f.label t :count %>
  <%= f.number_field :count, class: "form-control" %>

  <%= f.label t :percent %>
  <%= f.number_field :percent, class: "form-control" %>

  <%= f.label :brand_id %>
  <%= f.select(:brand_id,  Brand.all.collect {|brand| [ "#{brand.name}", brand.id ] } , prompt: "Select") %>

  <%= f.submit class: "btn btn-primary" %>
  <% end %>
