<table class="table table-striped table-hover">
  <tr>
    <th><%= t "name_product" %></th>
    <th><%= t "name_brand" %></th>
    <th><%= t "price" %></th>
    <th><%= t "coupon" %></th>
    <th><%= t "option" %></th>
  </tr>
  <% products.each do |product| %>
    <tr>
      <td><%= link_to product.name, product %></td>
      <td><%= link_to product.brand.name,
        product.brand %></td>
      <td><%= product.price %></td>
      <td><%= product.coupon %></td>
      <td><%= link_to t("edit"), edit_admin_product_path(product) %> |
        <%= link_to t("delete"), admin_product_path(product),
        method: :delete, data: {confirm: t("are_you_sure")} %>
      </td>
    </tr>
  <% end %>
</table>
<div class="panel-footer"><%= will_paginate products %></div>
