<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="features-items">
        <h2 class="title text-center"><%= t "product" %></h2>
      </div>
      <table class="shop-table cart">
        <thead>
          <tr>
            <th><%= t "image" %></th>
            <th><%= t "product" %></th>
            <th><%= t "quantity" %></th>
            <th><%= t "price" %></th>
            <th><%= t "total" %></th>
            <th><%= t "remove" %></th>
          </tr>
        </thead>
        <tbody>
          <% @cart.line_items.each do |item| %>
            <tr class="cart_item" id=<%= item.id %>>
              <td class="product-thumbnail">
                <%= image_tag item.product.image_url %>
              </td>
               <td class="product-name">
                <%= link_to item.product.name, item.product %>
              </td>
              <td>
                <div class="quantity buttons_added">
                  <%= link_to "+", quantity_path(item.id, method: "increase"),
                    class: "minus", method: :post %>
                  <input type="number" size="4"
                    value="<%= item.quantity %>" readonly>
                  <%= link_to "-", quantity_path(item.id, method: "decrease"),
                    class: "minus", method: :post %>
                </div>
              </td>
              <td>
                <span class="amount">
                  <%= number_to_currency item.product.price %>
                </span>
              </td>
              <td>
                <span class="amount">
                  <%= number_to_currency item.total_price %>
                </span>
              </td>
              <td class="product-remove">
                <%= link_to item, method: :delete, remote: true,
                  data: {confirm: t("are_you_sure")},
                  class: "btn btn-danger" do %>
                  <span class="glyphicon glyphicon-remove"></span>
                <% end %>
              </td>
            </tr>
          <% end %>
          <%= render "total_price", cart: @cart, coupon: @coupon %>
          <tr>
            <td>
              <%= link_to @cart, method: :delete,
                data: {confirm: t("are_you_sure")},
                class: "btn btn-primary" do %>
                <%= t "remove_all_product" %>
              <% end %>
            </td>
            <td></td>
            <td></td>
            <td>
              <button type="button" class="btn btn-default">
                <span class="glyphicon glyphicon-shopping-cart"></span>
                <%= link_to t("back_to_home_to_continue_shopping"),
                  root_path %>
              </button>
            </td>
            <td>
              <div class="form-group has-feedback">
                <%= text_field_tag :apply, session[:coupon_code],
                  class: "form-control", id: "coupon-input" %>
                <% if session[:coupon_code]%>
                  <i class="glyphicon glyphicon-ok
                    ok-icon form-control-feedback"></i>
                <% end %>
              </div>
            </td>
            <td>
              <%= link_to new_order_path, method: :get,
                class: "btn btn-success" do %>
                <%= t "checkout" %>
                <span class="glyphicon glyphicon-play"></span>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-4">
      <div class="features-items">
        <h2 class="title text-center"><%= t "order" %></h2>
      </div>
      <div class="cart-totals">
        <table>
          <tbody>
            <tr class="order-total">
              <th><%= t "total" %></th>
              <td>
                <strong>
                  <span class="amount" id="cart_price">
                    <%= number_to_currency @cart.total_price %>
                  </span>
                </strong>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <%= link_to new_order_path, class: "submit" do %>
        <span class="glyphicon glyphicon-play"></span>
        <%= t "checkout" %>
      <% end %>
      <br /><br />
      <%= link_to @cart, method: :delete, data: {confirm: t("are_you_sure")},
        class: "submit" do %>
        <%= t "remove_all_product" %>
      <% end %>
      <br /><br />
      <%= link_to t("back_to_home_to_continue_shopping"),
        root_path, class: "submit" %>
    </div>
  </div>
</div>
