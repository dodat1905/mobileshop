<div class="header-area navbar-fixed-top">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <div class="user-menu">
          <ul>
            <li>
              <%= link_to root_path do %>
                <i class="fa fa-user"></i> <%= t("home") %>
              <% end %>
            </li>
            <% if user_signed_in? %>
              <% if current_user && current_user.admin? %>
                <li>
                  <%= link_to admin_static_pages_path do %>
                    <i class="fa fa-user"></i> <%= t("admin") %>
                  <% end %>
                </li>
                <li class="dropdown">
                  <%= button_tag "#", class: "btn btn-primary dropdown-toggle",
                    data: {toggle: "dropdown"} do %>
                    <span id="notify-count">0</span>
                  <% end %>
                  <ul class="dropdown-menu scrollable-menu" role="menu"
                    id="notify-list">
                  </ul>
                </li>
              <% end %>
              <li>
                <%= link_to current_user do %>
                  <i class="fa fa-user"></i> <%= t("profile_order") %>
                <% end %>
              </li>
              <li>
                <%= link_to edit_user_registration_path do %>
                  <i class="fa fa-user"></i> <%= t("edit_profile") %>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-user"></i> <%= t("logout") %>
                <% end %>
              </li>
            <% else %>
              <li>
                <%= link_to new_user_registration_path do %>
                  <i class="fa fa-user"></i> <%= t("sign_up") %>
                <% end %>
              </li>
              <li>
                <%= link_to new_user_session_path do %>
                  <i class="fa fa-user"></i> <%= t("log_in") %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="col-md-4">
        <div class="header-right">
          <ul class="list-unstyled list-inline">
            <li>
              <%= form_with url: search_path, local: true, method: :get,
                html: {class: "fom-inline my-2 my-lg-2"} do |f| %>
                <%= f.text_field :q, data: {behavior: "autocomplete"},
                  class: "form-control mr-sm-2" %>
              <% end %>
            </li>
            <li><%= link_to t("layouts.application.en"), locale: :en %></li>
            <li><%= link_to t("layouts.application.vi"), locale: :vi %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<br />
  <div class="site-branding-area">
    <div class="container">
      <div class="row">
        <div class="col-sm-6">
          <div class="logo">
            <h1><%= link_to image_tag("logo"), root_path %></h1>
          </div>
        </div>
      <div class="col-sm-6">
        <div class="shopping-item">
          <% if cart_size %>
            <%= link_to cart_path(session[:cart_id]) do %>
              <%= t "cart" %>
              <i class="fa fa-shopping-cart"></i>
              <span class="product-count"><%= cart_size %></span>
            <% end %>
          <% else %>
            <%= link_to t("carts_size"), "#" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="mainmenu-area">
  <div class="container">
    <div class="row">
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li class="active"><%= link_to t("home"), root_path %></li>
          <li><%= link_to t("brands"), brands_path %></li>
          <li><%= link_to t("products"), products_path %></li>
          <li><%= link_to t("checkout"), new_order_path %></li>
          <li><a href="#">Contact</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>
