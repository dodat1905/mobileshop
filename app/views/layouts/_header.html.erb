<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("store"), root_path, class: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= form_with url: search_path, local: true, method: :get,
            html: {class: "fom-inline my-2 my-lg-2"} do |f| %>
            <%= f.text_field :q, data: {behavior: "autocomplete"},
              class: "form-control mr-sm-2" %>
          <% end %>
        </li>
        <li><%= link_to t("home"), root_path %></li>
        <% if user_signed_in? %>
          <% if current_user && current_user.admin? %>
            <li><%= link_to t("admin"), admin_path %></li>
            <li class="dropdown">
              <%= button_tag "#", class: "btn btn-primary dropdown-toggle",
                data: {toggle: "dropdown"} do %>
                <span id="notify-count">0</span>
              <% end %>
              <ul class="dropdown-menu scrollable-menu" role="menu"
                id="notify-list">
              </ul>
            </li>
          <% end %>
          <li><%= link_to t("profile_order"), current_user %></li>
          <li><%= link_to t("edit_profile"),
            edit_user_registration_path %></li>
          <li>
            <%= link_to t("logout"),
              destroy_user_session_path, method: :delete %>
          </li>
          <% if cart_size %>
            <li>
              <%= link_to cart_path(session[:cart_id]) do %>
                <%= t "carts_size" %><%= cart_size %>
              <% end %>
            </li>
          <% else %>
            <li>
              <%= link_to t("carts_size"), "#" %>
            </li>
          <% end %>
        <% else %>
          <li><%= link_to t("sign_up"), new_user_registration_path %></li>
          <li><%= link_to t("log_in"), new_user_session_path %></li>
        <% end %>
        <li><%= link_to t("layouts.application.en"), locale: :en %></li>
        <li><%= link_to t("layouts.application.vi"), locale: :vi %></li>
      </ul>
    </nav>
  </div>
</header>
