<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="features_items">
        <h2 class="title text-center"><%= t "edit_profile" %>:
          <%= @user.name %>
        </h2>
      </div>
      <div class="left-sidebar">
        <div class="brands_products">
          <div class="col-md-6 col-md-push-3">
            <div class="brands-name">
              <%= form_for resource, as: resource_name,
                url: registration_path(resource_name),
                html: {method: :put} do |f| %>

                <%= devise_error_messages! %>

                <%= f.label t :email %><br />
                <%= f.email_field :email, autofocus: true,
                  class: "form-control" %><br />

                <% if devise_mapping.confirmable? &&
                  resource.pending_reconfirmation? %>
                  <div>
                    <%= t("wait_confirm") %>
                    <%= resource.unconfirmed_email %>
                  </div>
                <% end %>

                <%= f.label t :name %><br />
                <%= f.text_field :name, class: "form-control" %><br />

                <%= f.label t :password %> <i>(<%= t "blank" %>)</i><br />
                <%= f.password_field :password, class: "form-control" %>
                <% if @minimum_password_length %>
                  <em>
                    <%= @minimum_password_length %>
                    <%= t "characters_minimum" %>
                  </em>
                <% end %><br />

                <%= f.label t :password_confirmation %><br />
                <%= f.password_field :password_confirmation,
                  class: "form-control" %><br />

                <%= f.label t :current_password %>
                  <i>(<%= t "need_password" %>)</i><br />
                <%= f.password_field :current_password,
                  class: "form-control" %><br />

                <%= f.label t :address %><br />
                <%= f.text_field :address, class: "form-control" %><br />

                <%= f.label t :phone %><br />
                <%= f.text_field :phone, class: "form-control" %><br /><br />

                <%= f.submit t("update") %>
              <% end %>

              <%= link_to t("back"), :back %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
