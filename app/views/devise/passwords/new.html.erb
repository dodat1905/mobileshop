<h2><%= "forgot_password" %></h2>
<%= form_for resource, as: resource_name,
  url: password_path(resource_name), html: { method: :post } do |f| %>

  <%= devise_error_messages! %>

  <%= f.label t :email %><br />
  <%= f.email_field :email, autofocus: true %>

  <%= f.submit t("sent_password") %>
<% end %>
