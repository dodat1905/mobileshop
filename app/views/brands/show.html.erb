<% provide :title, @brand.name %>
<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <%= link_to brands_url,
        class: "list-group-item active main-color-bg" do %>
        <span class="glyphicon glyphicon-cog" aria-hidden="true">
        </span> Brand<span class="badge">12</span>
      <% end %>
      <div class="list-group">
        <% @brands.each do |brand| %>
          <%= link_to brand_path(brand), class: "list-group-item" do %>
            <span class="glyphicon glyphicon-list-alt" aria-hidden="true">
            </span>
            <%= brand.name %><span class="badge">12</span>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-sm-9">
      <% @brand.products.each do |product| %>
        <div class="col-sm-3">
          <div class="panel panel-primary">
            <%= link_to product.name, product_path(product),
              class: "list-group-item active main-color-bg" %>
            <div class="panel-body"><img
              src="https://placehold.it/150x80?text=IMAGE"
              class="img-responsive" style="width:100%" alt="Image"></div>
            <div class="panel-footer">Add to cart</div>
          </div>
          </div>
      <% end %>
    </div>
  </div>
