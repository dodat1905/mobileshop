<% provide :title, t("all_brands") %>
<div class="container">
  <div class="row">
    <%= render "brand", brands: @brands %>
    <div class="col-sm-9">
      <% @brands.each do |brand| %>
        <div class="col-sm-3">
          <div class="panel panel-primary">
            <%= link_to brand.name, brand,
              class: "list-group-item active main-color-bg" %>
            <div class="panel-body">
              <img src="https://placehold.it/150x80?text=IMAGE"
                class="img-responsive" alt="Image">
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="panel-footer"><center><%= will_paginate @brands %></center></div>
</div>
