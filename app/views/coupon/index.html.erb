<% provide :title, Product %>
<%= render "admin/sidebar" %>
<div class="col-md-9">
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Product</h3>
  </div>
  <div class="panel-body">
    <table class="table table-striped table-hover">
      <tr>
        <th>Coupon</th>
        <th>Count</th>
        <th>Percent</th>
        <th>Option</th>
      </tr>
<% @coupons.each do |coupon| %>
    <tr>
      <td><%= link_to coupon.name, product_path(coupon) %></td>
      <td><%= coupon.coupon %></td>
      <td><%= coupon.count %></td>
      <td><%= coupon.percent %></td>
      <td><%= link_to "Edit", edit_coupon_path(coupon) %> | <%= link_to "Delete", coupon, method: :delete,
    data: {confirm: t("are_you_sure")} %></td>
<% end %>
    </tr>
    </table>
  </div>
  <% will_paginate @coupons %>
</div>
      </div>
    </div>
  </div>
</section>
