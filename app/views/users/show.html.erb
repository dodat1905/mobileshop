<%= render "header" %>
<% provide :title, @user.name %>
<section id="main">
  <div class="container">
    <div class="row">
      <%= render "sidebar", user: @user %>
      <div class="col-md-9">
        <div class="panel panel-primary">
          <div class="add-to-cart-button"><%= t :order %></div>
          <div class="panel-body">
            <table class="table table-striped table-hover">
              <tr>
                <th><%= t :order %></th>
                <th><%= t :status %></th>
                <th><%= t :time_buy %></th>
              </tr>
              <% @orders.each do |order| %>
                <tr>
                  <td><%= link_to t("show_order"),
                    user_order_path(user_id: current_user.id, id: order.id) %>
                  </td>
                  <td><%= order.order_status %></td>
                  <td><%= l order.created_at %></td>
                </tr>
              <% end %>
            </table>
            <div class="panel-footer"><%= will_paginate @orders %></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
