<header id="header">
  <div class="container">
    <div class="row">
      <div class="col-md-10">
        <h1><span class="glyphicon glyphicon-cog" aria-hidden="true">
          </span> Dashboard <small>Manage Your Site</small></h1>
      </div>
      </div>
  </div>
</header>

<section id="main">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <div class="list-group">
          <div class="list-group-item active main-color-bg">
            <span class="glyphicon glyphicon-cog" aria-hidden="true">
              </span> <%= t "profile" %>
          </div>
          <div class="list-group-item">
            <span class="glyphicon glyphicon-cog" aria-hidden="true">
              </span> <%= t "name" %>: <%= user.name %>
          </div>
          <div class="list-group-item">
            <span class="glyphicon glyphicon-list-alt" aria-hidden="true">
              </span> <%= t "email" %>: <%= user.email %>
          </div>
          <div class="list-group-item">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true">
              </span> <%= t "address" %>: <%= user.address %>
          </div>
          <div class="list-group-item">
            <span class="glyphicon glyphicon-user" aria-hidden="true">
              </span> <%= t "phone" %>: <%= user.phone %>
          </div>
          <div class="list-group-item">
            <span class="glyphicon glyphicon-user" aria-hidden="true">
              </span> <%= t "created_at" %>: <%= user.created_at %>
          </div>
        </div>
      </div>
