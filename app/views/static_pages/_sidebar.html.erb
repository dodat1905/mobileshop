<div class="col-sm-3">
  <%= link_to brands_url, class: "list-group-item active main-color-bg" do %>
    <span class="glyphicon glyphicon-cog" aria-hidden="true">
    </span> <%= t "brand" %><span class="badge">12</span>
  <% end %>
  <div class="list-group">
    <% brands.each do |brand| %>
      <%= link_to brand_path(brand), class: "list-group-item" do %>
        <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
          <%= brand.name %><span class="badge">12</span>
      <% end %>
    <% end %>
  </div>
</div>
